
#include <iostream>
using namespace std;
#include <string>
class stringtype {
    string a;
    string b;

public:

    stringtype() {
        a = "Hello";
        b = "World";
    }
    stringtype(string y, string z) {
        a = y;
        b = z;

    }


    void setvalues(string str1, string str2) {
        cin >> a;
        cout << endl;
        cin >> b;
        cout << endl;
    }
    void printvalues() {
        cout << "String 1 is '" << a << "' ." << endl;
        cout << "String 2 is '" << b << "' ." << endl;
    }
    int maxlength() {

        int k;
        for (int i = 0; a[i] != '/0'; i++) {
            k++;
        }
        int j;
        for (int i = 0; b[i] != '/0'; i++) {
            j++;
        }
        if (k > j) {
            cout << "String A has a larger value of: " << k;
        }
        else {
            cout << "String B has a larger value of: " << j;
        }
    }
    int compare() {
        static int k;
        for (int i = 0; (a[i] != '/0' && b[i] != '/0'); i++) {
            if (a[i] != b[i]) {
                k = 1;
                break;
            }
        }
        if (k == 0) {
            cout << "Strings are equal." << endl;
        }
        else {
            cout << "The strings are not equal." << endl;
        }
    }
    string concatenate() {
        string result;
        result = a + b;
        cout << "The concatenated string is: " << result << endl;

    }
    int searchchar(char ch) {
        cout << "Enter a character you want to search: ";
        cin >> ch;
        for (int i = 0; a[i] != '/0'; i++) {
            if (a[i] == ch) {
                cout << "The character '" << ch << "' is present in string 1." << endl;
            }
            else {
                cout << "Character not found in string 1;" << endl;
            }
        }
        for (int j = 0; a[j] != '/0'; j++) {
            if (b[j] == ch) {
                cout << "The character '" << ch << "' is present in string 2." << endl;
            }
            else {
                cout << "Character not found in string 2;" << endl;
            }
        }
    
    int searchword(string word) {
        string word;
        int c;
        cout << "Enter the word you want to search: " << endl;
        getline(cin, word);
        for (int k = 0; a[k] != '/0'; k++) {
            if ((a[k] == word[c]) && (word[c] != '/0') && (a[k] != ' ')) {
                c++;
            }
            else {
                c = 0;
            }
        }
        if (c == 0) {
            cout << "Word not found in string 1." << endl;
        }
        else {
            cout << "Word found in string 1" << endl;
        }

        string wrd, int d;
        cout << "Enter the word you want to search: " << endl;
        getline(cin, wrd);
        for (int k = 0; b[k] != '/0'; k++) {
            if ((b[k] == wrd[d]) && (wrd[c] != '/0') && (b[k] != ' ')) {
                d++;
            }
            else {
                d = 0;
            }
        }
        if (d == 0) {
            cout << "Word not found in string 2." << endl;
        }
        else {
            cout << "Word found in string 2" << endl;
        }
    }

};

    int main()
    {
        stringtype t;
        int opt;
        cout << "What option do you want to perform?(select a number)" << endl;
        cout << "1.Enter two strings" << endl << "2.Print two strings" << endl << "3.Find string with maximum length" << endl << "4.Compare the two strings." << endl << "5.Concatenate the two strings." << endl << "6.Search a word." << endl << " 7.Search a character." << endl;
        cin >> opt;
        if (opt > 0 && opt < 8) {
            if (opt == 1) {
                t.setvalues(a, b);
            }
            else if (opt == 2) {
                t.printvalues();
            }
            else if (opt == 3) {
                t.maxlength();
            }
            else if (opt == 4) {
                t.compare();
            }
            else if (opt == 5)
                t.concatenate();
            }
            else if (opt == 6) {

            t.searchword("hello");
             }
             else {
              searchchar('f');
              }
    }


}
